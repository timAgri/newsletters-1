                                          td(height='5' style='line-height: 5px; font-size:5px;') &nbsp;
                                        tr  
                                      else
                                          td(align="center", bgcolor=val, width='10px' height="10px" style=' line-height:10px; width:10px; height:10px;') &nbsp; 
