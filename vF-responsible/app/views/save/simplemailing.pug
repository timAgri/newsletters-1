extends layout/layout.pug 

block data
  - var meta =  Data.meta._utmVF;   
  - var lang = 'fr';      
  
block style 
  link(rel='stylesheet', href='css/style.css')
  style(type='text/css').
    @media only screen and (max-width: 480px) { 
    body { 
    font-size: 16px !important;
    }   
    .logo__white,
    .products__between,
    .mobile--hide { 
    display: none!important;
    } 
    .menu {
    display: block;
    }
    .menu tr,
    .menu td,
    .menu tbody {
    display: block;
    }
    .menu__links {
    height: 25px!important;
    }
    .menu__link {
    display: block;
    float: left;
    width: 25%;
    height: 30px!important;
    }
    .menu__link--a {
    display: block;
    font-size: 12px;
    line-height: 30px!important;
    height: 30px!important;
    }
    .menu__border {
    font-size: 2.5px!important;
    height: 2.5px!important;
    line-height: 2.5px!important;
    }
    #bodyTable {
    width: 100%!important;
    }
    .products__unit {
    float: left; 
    width: 48%; 
    margin-left: 1%;
    margin-right: 1%;
    margin-top: 5px;
    margin-bottom: 5px;
    }
    .products__unit--big,.produit__unit--quote {
    float: none;
    display: block;
    width: 80%!important;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 15px;
    }
    .products__unit--double {
    /*container margin-left-right: 1%*/
    width: 98%;
    display: block;
    }
    .title--line {
    width: 5%;
    }
    .title--txt {
    width: 90%;
    }
    .tableReassurances__body {
    position: relative;
    }
    .tableReassurances__body td {
    float: left;
    width: 50%;
    display: block;
    }
    .tableReassurances__body td img {
    height: 50px!important;
    width: auto;
    text-align: left;
    display: inline-block;
    }
    .footer__wrapper {
    position: relative;
    width: 80%;
    }
    .footer__wrapper td {
    width: 100%;
    display: block;
    text-align: center;  
    }
    .footer__wrapper img { 
    margin: 0 auto;
    } 
    .footer__rss {
    position: relative;
    margin-top: 20px;
    } 
    .footer__rss td {
    float: left;  
    width: 25%;
    display: block;
    }
    .footer__rss img {
    height: 30px!important;  
    width: auto;  
    }
    .bigOffert__col{
    display:block;
    width:100%;
    }
    }
    .footer__col td { 
        font-size: 12px!important;
    }
  != "<!--[if gte mso 10]>"
  style.
    table, p, span, div, table, tr, td, th, a { 
    mso-style-priority:99;  font-family:"Arial","sans-serif"; 
    }
  != "<![endif]-->" 
block preheader  
  include ./mixins/preheader.pug
  +preheader('agrico', "Le vent souffle ce Weekend")
 
   
block content    
  include ./mixins/title--simple.pug
  include ./mixins/title.pug      
  include ./mixins/produit_3.pug  
  include ./mixins/produit_2.pug
  include ./mixins/produit_3__buse.pug 
  include ./mixins/produit_3__prix.pug  
  include ./mixins/produit_4.pug  
  include ./mixins/banner.pug 
  include ./mixins/bannerNext.pug 
  include ./mixins/btn.pug     
  include ./mixins/quote.pug
  include ./mixins/produit_3__btnOnly.pug      
  include ./mixins/produit_3__dechaumeur.pug
  include ./mixins/produit_3__details.pug
  include ./mixins/produit__quote.pug
  include ./mixins/link.pug
  tr
    td &nbsp;

  tr
    td
      table(align="center" width="70%")


        tr
          td(style="font-size:20px; font-weight:bold;") Cher client,
        tr
          td(height="30" style="font-size:30px; line-height:30px;  ") &nbsp;
        tr
          td(style="font-size:16px; line-height:30px; ") Dans le cadre de l'amélioration de notre service, nous aimerions recueillir votre opinion.
        tr
          td(height="5" style="font-size:5px; line-height:5px;  ") &nbsp;
        tr
          td(style="font-size:16px; ") Ce formulaire ne vous prendra que quelques minutes.
        tr
          td(height="5" style="font-size:5px; line-height:5px;  ") &nbsp;
        tr
          td.products__btn( width='100%', style='border-collapse: collapse; mso-line-height-rule: exactly;')
            table( border='0', cellspacing='0', cellpadding='0', width='80%', style='border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt;')
              tr
                td(align='center', width='100%', style=' border-collapse: collapse; mso-line-height-rule: exactly;')
                  != "<!--[if mso]>"
                  v:roundrect(xmlns:v='urn:schemas-microsoft-com:vml', xmlns:w='urn:schemas-microsoft-com:office:word', href!="/" + utm , style='height:30px;v-text-anchor:middle;width:500px;', arcsize='5%', strokecolor='#52c47d', fillcolor='#52c47d')
                    w:anchorlock
                      center(style='color:#fff;font-family:Helvetica, Arial,sans-serif;font-size:14px;') Retrouvez l'enquête de satisfaction
                  != "<![endif]-->"
                  a(href!="/" + utm, style=' font-family:Arial,Helvetica,sans-serif;background-color: #52c47d; border: 1px solid #52c47d; border-radius: 3px; color: #fff; display: inline-block; font-family: sans-serif; font-size: 14px; line-height: 30px; text-align: center; text-decoration: none; width: 100%; -webkit-text-size-adjust: none; mso-hide: all; font-weight: bold;') Retrouvez l'enquête de satisfaction
        tr
          td(height="30" style="font-size:30px; line-height:30px;  ") &nbsp;
        tr
          td(style="font-size:16px; ") En vous remerciant par avance.

        tr
          td(height="15" style="font-size:15px; line-height:15px;  ") &nbsp;

        tr
          td(style="font-size:16px; font-weight:bold ") L’équipe Agriconomie.



  tr
    td &nbsp;



block footer__expert
