mixin promoClub(url, img, alt, btn)
  tr
    td  
  tr
    td(width='100%', align='center', style='border-collapse: collapse;')
      table.club__promo(align='center', width='95%', cellpadding='0', cellspacing='0', border='0', style='border-collapse: collapse;')
        tr
          td.club__promo_img(width='50%', align='center', style='border-collapse: collapse;')
            a(href='https://www.agriconomie.com/' + url + utm, style='color: black; text-decoration: none;')
              img.deviceWith(alt='PROLONGATION DE LA MORTE SAISON : -4%', src= img, border='0', style='border: 0px none; display: block; line-height: 100%; max-width: 100%; outline: none; text-decoration: none; width: 100%;')
          td.club__promo_description(bgcolor='#fafafa', width='50%', align='center', style='border: 1px solid rgb(238, 238, 238); border-collapse: collapse; color: rgb(52, 58, 70); font-family: Arial, Helvetica, sans-serif; font-size: 17px; line-height: 20px;')
            a(href='https://www.agriconomie.com/' + url + utm, style='color: black; text-decoration: none;')
              table(width='80%', cellpadding='0', cellspacing='0', border='0', style='border-collapse: collapse;')
                tr.ShowInMobile(style='display: none;')
                  td(style='border-collapse: collapse;')
                tr
                  td(style='border-collapse: collapse; font-size: 10px; line-height: 10px;')
                tr
                  td.club__promo_description--title(align='center', style='border-collapse: collapse; font-size: 20px; line-height: 20px; font-weight: bold;')
                    | Prolongation de la morte saison : -4%
                tr
                  td(style='border-collapse: collapse; font-size: 10px; line-height: 10px;')
                tr
                  td(align='center', style='border-collapse: collapse; font-size: 13px; line-height: 13px;')
                    | jusqu’au 15/02/2018
                tr
                  td(style='border-collapse: collapse; font-size: 10px; line-height: 10px;')
                tr
                  td(align='center', style='border-collapse: collapse; font-size: 12px;')
                    | Suite à vos nombreuses demandes et en raison des intempéries climatiques
                tr
                  td(style='border-collapse: collapse; font-size: 10px; line-height: 10px;')
                tr
                  td.club__promo_description--btn(align='center', width='100%', style='background-color: rgb(82, 196, 125); border: 1px solid rgb(82, 196, 125); border-collapse: collapse; border-radius: 3px; color: rgb(255, 255, 255); display: block; font-family: Arial, Helvetica, sans-serif; font-size: 16px; font-weight: bold; line-height: 40px; text-align: center; text-decoration: none;')
                    table(border='0', cellspacing='0', cellpadding='0', align='center', width='100%', style='border-collapse: collapse;')
                      tr
                        td(align='center', width='100%', style='border-collapse: collapse;')
                          != "<!--[if mso]>"
                          v:roundrect(xmlns:v='urn:schemas-microsoft-com:vml', xmlns:w='urn:schemas-microsoft-com:office:word', href='https://www.agriconomie.com/' + url + utm, style='text-align:center;height:60px;v-text-anchor:middle;width:200px;', arcsize='5%', strokecolor='#52c47d', fillcolor='#52c47d')
                            w:anchorlock
                              center(style='color:#fff;font-family:Helvetica, Arial,sans-serif;font-size:14px;')= btn
                          != "<![endif]-->"
                          a(href='https://www.agriconomie.com/'+ url + utm, style='text-size-adjust: none; background-color: rgb(82, 196, 125); border: 1px solid rgb(82, 196, 125); border-radius: 3px; color: rgb(255, 255, 255); display: inline-block; font-family: sans-serif; font-size: 14px; font-weight: bold; line-height: 30px; text-align: center; text-decoration: none; width: 95%;')= btn
                tr.showInMobile
                  td(style='border-collapse: collapse;')